<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #09667a;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ballsort.ui.SettingsController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="247.0" spacing="10.0" style="-fx-background-color: #09667a;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Select color for ball">
               <font>
                  <Font name="Book Antiqua Bold" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="-5.0" />
               </VBox.margin>
            </Label>
            <ColorPicker fx:id="colorp1" onAction="#colorp1" prefHeight="25.0" prefWidth="220.0" />
            <ColorPicker fx:id="colorp2" onAction="#colorp2" prefHeight="25.0" prefWidth="220.0" />
            <ColorPicker fx:id="colorp3" onAction="#colorp3" prefHeight="25.0" prefWidth="220.0" />
            <Button fx:id="btnColorSelect" alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="0.0" mnemonicParsing="false" onAction="#SelectColor" prefHeight="25.0" prefWidth="167.0" style="-fx-border-radius: 15; -fx-border-color: #252525; -fx-background-color: #e67c0e; -fx-background-radius: 15;" text="Select" textFill="WHITE">
               <font>
                  <Font name="Book Antiqua Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnReturn" alignment="CENTER" contentDisplay="RIGHT" graphicTextGap="0.0" mnemonicParsing="false" onAction="#Return" prefHeight="25.0" prefWidth="167.0" style="-fx-border-radius: 15; -fx-border-color: #252525; -fx-background-color: #e67c0e; -fx-background-radius: 15;" text="Back to main menu" textFill="WHITE">
               <font>
                  <Font name="Book Antiqua Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: #09667a;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Settings">
               <font>
                  <Font name="Book Antiqua Bold" size="36.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="40.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
</BorderPane>
